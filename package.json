{
  "name": "nadpay",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.4",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p ${PORT:-3000}",
    "start:prod": "pm2-runtime start ecosystem.config.js",
    "lint": "next lint",
    "compile": "npx hardhat compile",
    "generate-abi": "npm run compile && node scripts/generateABI.js",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network monadTestnet",
    "finalizer:once": "node scripts/raffle-v4-fast-finalizer.js --once",
    "finalizer:start": "node scripts/raffle-v4-fast-finalizer.js",
    "finalizer:fast": "node scripts/raffle-v4-fast-finalizer.js --interval 1",
    "finalizer:v7": "node finalizer-v7-ultra-fast.js",
    "finalizer:v7:safe": "node finalizer-v7-ultra-fast.js --interval 60",
    "deploy:railway": "bash scripts/deploy-railway.sh"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.80.7",
    "@types/qrcode": "^1.5.5",
    "@wagmi/core": "^2.17.3",
    "autoprefixer": "^10.4.21",
    "connectkit": "^1.9.1",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.4",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.517.0",
    "mongodb": "^6.17.0",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "node-cron": "^4.1.1",
    "pm2": "^6.0.8",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "viem": "^2.31.3",
    "wagmi": "^2.15.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^4.9.6",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "hardhat": "^2.24.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.14",
    "typescript": "^5"
  }
}
