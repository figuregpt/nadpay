package-manager=npm
engine-strict=true

# Disable progress bar for faster installs
progress=false

# Disable update notifier
update-notifier=false

# Disable audit on install
audit=false

# Disable fund messages
fund=false

# Use a faster registry
registry=https://registry.npmjs.org/

# Prefer offline cache
prefer-offline=true

# Set max sockets for parallel downloads
maxsockets=50

# Disable scripts for faster installs in CI
ignore-scripts=false 